<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A6D97"
    tools:context=".game2048">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="378dp"
        android:layout_height="456dp"
        android:layout_marginEnd="12dp"
        android:background="@color/beige"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.687">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text1"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text2"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text3"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text4"
                style="@style/style_textView"
                android:text="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text5"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text6"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text7"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text8"
                style="@style/style_textView"
                android:text="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text9"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text10"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text11"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text12"
                style="@style/style_textView"
                android:text="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text13"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text14"
                style="@style/style_textView"

                android:text="0" />

            <TextView
                android:id="@+id/text15"
                style="@style/style_textView"
                android:text="0" />

            <TextView
                android:id="@+id/text16"
                style="@style/style_textView"

                android:text="0" />
        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/btNewGame"
        android:layout_width="133dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        android:backgroundTint="@color/beige"
        android:color="#FFA726"

        android:text="New Game"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btGoBack"
        android:layout_width="133dp"
        android:layout_height="66dp"

        android:backgroundTint="@color/beige"
        android:color="#FFA726"

        android:text="Go To Menu"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <Button
        android:id="@+id/btUndo"
        android:layout_width="133dp"
        android:layout_height="66dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="12dp"

        android:backgroundTint="@color/beige"
        android:color="#FFA726"

        android:text="Undo Move"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/best"
        style="@style/style_textView"
        android:layout_width="86dp"

        android:layout_height="43dp"
        android:layout_marginEnd="51dp"
        android:background="@color/beige"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/score"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <TextView
        android:id="@+id/score"
        style="@style/style_textView"
        android:layout_width="86dp"
        android:layout_height="43dp"
        android:background="@color/beige"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="234dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:text="2048"
        android:textColor="@color/c256"
        android:textSize="48sp"
        app:layout_constraintEnd_toStartOf="@+id/btNewGame"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="170dp"
        android:layout_height="39dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="48dp"
        android:gravity="center"
        android:textColor="@color/c256"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/btNewGame"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>